@{
    Layout = "~/Views/Shared/_Register.cshtml";
    ViewBag.Title = "Register";
}

@using System.Web.Optimization
@model eUseControl.Web.Models.UserRegister

<div class="container">
    <div class="row justify-content-center align-items-center" style="height: 100vh;">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="card shadow-sm p-4">
                <div class="view-header mb-4">
                    <div class="header-icon">
                        <i class="pe page-header-icon pe-7s-add-user"></i>
                    </div>
                    <div class="header-title">
                        <h3>Register</h3>
                    </div>
                </div>
                <div class="panel-body">
                    @Html.ValidationSummary(true)
                    @using (Html.BeginForm("Index", "Register", FormMethod.Post, new { @id = "RegisterForm" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(m => m.Username, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Username, new
                            {
                                placeholder = "Username",
                                title = "Please enter your username",
                                value = "",
                                name = "username",
                                id = "username",
                                @class = "form-control"
                            })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Email, new
                            {
                                placeholder = "example@gmail.com",
                                title = "Please enter your email",
                                value = "",
                                name = "email",
                                id = "email",
                                @class = "form-control"
                            })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Password, new
                            {
                                @class = "form-control",
                                type = "password",
                                title = "Please enter your password",
                                placeholder = "******",
                                value = "",
                                name = "password",
                                id = "password"
                            })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.ConfirmPassword, new
                            {
                                @class = "form-control",
                                type = "password",
                                title = "Please confirm your password",
                                placeholder = "******",
                                value = "",
                                name = "confirmPassword",
                                id = "confirmPassword"
                            })
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-accent">Register</button>
                            <a class="btn btn-secondary" href="@Url.Action("Index", "Login")">Login</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

